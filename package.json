{
  "name": "selfies-lang",
  "displayName": "SELFIES Language Support",
  "description": "Complete language support for SELFIES molecular notation with DSL, syntax highlighting, live preview, and molecular structure visualization",
  "version": "0.1.3",
  "publisher": "ghost---shadow",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "selfies",
    "chemistry",
    "molecules",
    "smiles",
    "cheminformatics",
    "molecular-design",
    "drug-discovery",
    "bioinformatics",
    "molecular-structure",
    "visualization"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onLanguage:selfies",
    "onCommand:selfies.showMolecule",
    "onCommand:selfies.togglePreview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "selfies",
        "aliases": [
          "SELFIES",
          "selfies"
        ],
        "extensions": [
          ".selfies"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/file-icon-light.svg",
          "dark": "./icons/file-icon-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "selfies",
        "scopeName": "source.selfies",
        "path": "./syntaxes/selfies.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "selfies.showMolecule",
        "title": "SELFIES: Show Molecular Structure"
      },
      {
        "command": "selfies.togglePreview",
        "title": "SELFIES: Toggle Preview Panel"
      }
    ],
    "configuration": {
      "title": "SELFIES",
      "properties": {
        "selfies.previewOnCursorMove": {
          "type": "boolean",
          "default": true,
          "description": "Update preview when cursor moves to a different line"
        },
        "selfies.autoOpenPreview": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open preview panel when opening .selfies files"
        },
        "selfies.renderingEngine": {
          "type": "string",
          "enum": [
            "smiles-drawer",
            "rdkit"
          ],
          "default": "smiles-drawer",
          "description": "Molecule rendering engine"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.js",
    "package": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src"
  },
  "dependencies": {
    "@rdkit/rdkit": "^2025.3.4-1.0.0",
    "selfies-js": "^0.1.3"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "sharp": "^0.34.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ghost---Shadow/selfies-vscode"
  },
  "bugs": {
    "url": "https://github.com/Ghost---Shadow/selfies-vscode/issues"
  },
  "homepage": "https://github.com/Ghost---Shadow/selfies-vscode#readme",
  "license": "MIT"
}
